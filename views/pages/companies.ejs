<!-- Companies Page Header -->
<div class="bg-primary text-white py-5 mb-5">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-8">
                <h1 class="display-4 fw-bold mb-3">
                    <i class="fas fa-building me-3"></i>
                    Nasze Firmy
                </h1>
                <p class="lead mb-0 opacity-90">
                    Odkryj portfolio najlepszych firm technologicznych świata
                </p>
            </div>
            <div class="col-lg-4 text-lg-end">
                <div class="badge bg-light text-primary fs-5 px-3 py-2">
                    <i class="fas fa-chart-bar me-2"></i>
                    <%= companies.length %> <%= companies.length === 1 ? 'firma' : (companies.length < 5 ? 'firmy' : 'firm') %>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Breadcrumb -->
<div class="container mb-4">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a href="/" class="text-decoration-none">
                    <i class="fas fa-home me-1"></i>Strona główna
                </a>
            </li>
            <li class="breadcrumb-item active" aria-current="page">Firmy</li>
        </ol>
    </nav>
</div>

<!-- Search and Filter Section -->
<div class="container mb-5">
    <div class="row">
        <div class="col-lg-8 mx-auto">
            <div class="card shadow-sm border-0">
                <div class="card-body">
                    <div class="row g-3">
                        <div class="col-md-8">
                            <div class="input-group">
                                <span class="input-group-text bg-light border-end-0">
                                    <i class="fas fa-search text-muted"></i>
                                </span>
                                <input type="text" class="form-control border-start-0" placeholder="Szukaj firm..." id="searchInput">
                            </div>
                        </div>
                        <div class="col-md-4">
                            <select class="form-select" id="sortSelect">
                                <option value="name">Sortuj według nazwy</option>
                                <option value="employees">Sortuj według liczby pracowników</option>
                                <option value="founded">Sortuj według roku założenia</option>
                            </select>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Companies Grid -->
<div class="container">
    <div class="row g-4" id="companiesGrid">
        <% companies.forEach((company, index) => { %>
        <div class="col-lg-4 col-md-6 company-card" data-name="<%= company.name.toLowerCase() %>" data-employees="<%= company.employees || 0 %>" data-founded="<%= company.founded ? new Date(company.founded).getFullYear() : 0 %>">
            <div class="card h-100 shadow-sm border-0 hover-card">
                <!-- Company Header -->
                <div class="card-header bg-gradient text-white position-relative overflow-hidden border-0 company-header-<%= index % 6 %>">
                    <div class="row align-items-center">
                        <div class="col-8">
                            <h5 class="card-title mb-1 fw-bold">
                                <%= company.name %>
                            </h5>
                            <small class="opacity-90">
                                <i class="fas fa-globe me-1"></i>
                                <%= company.slug %>
                            </small>
                        </div>
                        <div class="col-4 text-end">
                            <div class="company-logo-sm bg-white bg-opacity-20 rounded-circle d-inline-flex align-items-center justify-content-center">
                                <span class="fw-bold text-white">
                                    <%= company.name.charAt(0).toUpperCase() %>
                                </span>
                            </div>
                        </div>
                    </div>
                    <!-- Decorative elements -->
                    <div class="position-absolute top-0 end-0 opacity-10">
                        <i class="fas fa-building" style="font-size: 4rem; margin-top: -10px; margin-right: -10px;"></i>
                    </div>
                </div>

                <div class="card-body d-flex flex-column">
                    <!-- Company Description -->
                    <p class="text-muted mb-3 flex-grow-1">
                        <%= company.description ? (company.description.length > 120 ? company.description.substring(0, 120) + '...' : company.description) : 'Brak opisu firmy.' %>
                    </p>

                    <!-- Company Stats -->
                    <div class="row g-2 mb-3 text-center">
                        <% if (company.employees) { %>
                        <div class="col-6">
                            <div class="bg-light rounded p-2">
                                <div class="fw-bold text-success h6 mb-0">
                                    <%= company.employees.toLocaleString() %>
                                </div>
                                <small class="text-muted">pracowników</small>
                            </div>
                        </div>
                        <% } %>
                        <% if (company.founded) { %>
                        <div class="col-6">
                            <div class="bg-light rounded p-2">
                                <div class="fw-bold text-primary h6 mb-0">
                                    <%= new Date(company.founded).getFullYear() %>
                                </div>
                                <small class="text-muted">rok założenia</small>
                            </div>
                        </div>
                        <% } %>
                    </div>

                    <!-- Action Buttons -->
                    <div class="d-grid gap-2">
                        <a href="/firmy/<%= company.slug %>" class="btn btn-primary btn-sm">
                            <i class="fas fa-eye me-2"></i>
                            Zobacz szczegóły
                        </a>
                        <% if (company.webUrl) { %>
                        <a href="<%= company.webUrl %>" target="_blank" class="btn btn-outline-secondary btn-sm">
                            <i class="fas fa-external-link-alt me-2"></i>
                            Odwiedź stronę
                        </a>
                        <% } %>
                    </div>
                </div>

                <!-- Company Tags -->
                <div class="card-footer bg-transparent border-top-0 pt-0">
                    <div class="d-flex flex-wrap gap-1">
                        <% if (company.employees && company.employees > 100000) { %>
                        <span class="badge bg-success bg-opacity-10 text-success border border-success border-opacity-25">
                            <i class="fas fa-star me-1"></i>Big Tech
                        </span>
                        <% } %>
                        <% if (company.founded && new Date().getFullYear() - new Date(company.founded).getFullYear() > 20) { %>
                        <span class="badge bg-primary bg-opacity-10 text-primary border border-primary border-opacity-25">
                            <i class="fas fa-award me-1"></i>Etablowany
                        </span>
                        <% } %>
                        <% if (company.webUrl && company.webUrl.includes('https')) { %>
                        <span class="badge bg-info bg-opacity-10 text-info border border-info border-opacity-25">
                            <i class="fas fa-shield-alt me-1"></i>Bezpieczny
                        </span>
                        <% } %>
                    </div>
                </div>
            </div>
        </div>
        <% }); %>
    </div>

    <!-- Empty State -->
    <div class="text-center py-5 d-none" id="emptyState">
        <div class="mb-4">
            <i class="fas fa-search text-muted" style="font-size: 4rem;"></i>
        </div>
        <h4 class="text-muted">Nie znaleziono firm</h4>
        <p class="text-muted">Spróbuj zmienić kryteria wyszukiwania</p>
    </div>
</div>

<!-- Custom Styles -->
<style>
    .hover-card {
        transition: all 0.3s ease;
        border: 1px solid rgba(0,0,0,0.05) !important;
    }
    
    .hover-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 15px 35px rgba(0,0,0,0.1) !important;
    }
    
    .company-logo-sm {
        width: 40px;
        height: 40px;
        font-size: 1.2rem;
    }
    
    .company-header-0 { background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); }
    .company-header-1 { background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%); }
    .company-header-2 { background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%); }
    .company-header-3 { background: linear-gradient(135deg, #43e97b 0%, #38f9d7 100%); }
    .company-header-4 { background: linear-gradient(135deg, #fa709a 0%, #fee140 100%); }
    .company-header-5 { background: linear-gradient(135deg, #a8edea 0%, #fed6e3 100%); }
    
    .bg-gradient {
        position: relative;
    }
    
    .form-control:focus, .form-select:focus {
        border-color: #667eea;
        box-shadow: 0 0 0 0.2rem rgba(102, 126, 234, 0.25);
    }
    
    .badge {
        font-size: 0.7rem;
        font-weight: 500;
    }
    
    @media (max-width: 768px) {
        .display-4 {
            font-size: 2rem;
        }
    }
</style>

<!-- JavaScript for search and filtering -->
<script>
document.addEventListener('DOMContentLoaded', function() {
    const searchInput = document.getElementById('searchInput');
    const sortSelect = document.getElementById('sortSelect');
    const companiesGrid = document.getElementById('companiesGrid');
    const emptyState = document.getElementById('emptyState');
    const companyCards = document.querySelectorAll('.company-card');

    // Search functionality
    searchInput.addEventListener('input', function() {
        filterAndSort();
    });

    // Sort functionality
    sortSelect.addEventListener('change', function() {
        filterAndSort();
    });

    function filterAndSort() {
        const searchTerm = searchInput.value.toLowerCase();
        const sortBy = sortSelect.value;
        
        // Convert NodeList to Array for sorting
        const cardsArray = Array.from(companyCards);
        
        // Filter cards
        const visibleCards = cardsArray.filter(card => {
            const name = card.dataset.name;
            const isVisible = name.includes(searchTerm);
            card.style.display = isVisible ? 'block' : 'none';
            return isVisible;
        });

        // Sort visible cards
        visibleCards.sort((a, b) => {
            if (sortBy === 'name') {
                return a.dataset.name.localeCompare(b.dataset.name);
            } else if (sortBy === 'employees') {
                return parseInt(b.dataset.employees) - parseInt(a.dataset.employees);
            } else if (sortBy === 'founded') {
                return parseInt(b.dataset.founded) - parseInt(a.dataset.founded);
            }
        });

        // Reorder DOM elements
        visibleCards.forEach(card => {
            companiesGrid.appendChild(card);
        });

        // Show/hide empty state
        if (visibleCards.length === 0) {
            emptyState.classList.remove('d-none');
            companiesGrid.classList.add('d-none');
        } else {
            emptyState.classList.add('d-none');
            companiesGrid.classList.remove('d-none');
        }
    }

    // Add loading animation to cards
    companyCards.forEach((card, index) => {
        card.style.opacity = '0';
        card.style.transform = 'translateY(20px)';
        
        setTimeout(() => {
            card.style.transition = 'all 0.5s ease';
            card.style.opacity = '1';
            card.style.transform = 'translateY(0)';
        }, index * 100);
    });
});
</script>